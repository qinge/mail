<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_item_bg"
    android:minHeight="80dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/inbox_item_edit_view"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/inbox_item_checked_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="@drawable/checkbox" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inbox_item_isread_flag"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" 
        android:visibility="invisible">

        <Button
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/icon_status_unread" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/inbox_item_subject_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textStyle="bold" 
                android:text="yyyyy"
                />

            <LinearLayout
                android:id="@+id/inbox_item_extra_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center_vertical|right"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_attach" />
            </LinearLayout>

            <TextView
                android:id="@+id/inbox_item_receive_time_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textSize="12dp"
                android:text="2014-04-05 12:30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
               android:id="@+id/inbox_item_send_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="12:30" />
        </LinearLayout>

      <!--   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/inbox_item_content_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="12:30" />
        </LinearLayout> -->
    </LinearLayout>

</LinearLayout>
