<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/write_mail_main_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" 
    android:background="@drawable/bg">

    <include android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/general_head_bar"/>

    <FrameLayout
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" > 

        <ScrollView 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"  
              android:fadingEdge="none"
	        android:fadingEdgeLength="0dp"
	        android:overScrollMode="never">
 
            <LinearLayout
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/write_mail_receive_address_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="收件人:"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/write_mail_receive_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_toLeftOf="@+id/write_mail_receive_address_button"
                            android:layout_toRightOf="@id/write_mail_receive_address_text"
                            android:background="@null"
                            android:minEms="15"
                            android:text="378144946@qq.com"
                            android:singleLine="true" />

                        <ImageButton
                            android:id="@+id/write_mail_receive_address_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@null"
                            android:src="@drawable/button_add_selector"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#CBCCD0" />
                </LinearLayout>

                <LinearLayout
                     android:id="@+id/cc_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:gravity="center"
                     android:visibility="gone"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/write_mail_cc_receive_address_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="抄送 :"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/write_mail_cc_receive_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                             android:layout_marginLeft="4dp"
                            android:layout_toLeftOf="@+id/write_cc_address_select"
                            android:layout_toRightOf="@id/write_mail_cc_receive_address_text"
                            android:background="@null"
                            android:minEms="15"
                            android:singleLine="true" />

                        <ImageButton
                            android:id="@+id/write_cc_address_select"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@null"
                            android:visibility="invisible"
                            android:src="@drawable/button_add_selector" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#CBCCD0" />
                </LinearLayout>

                <LinearLayout
                     android:id="@+id/bcc_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/write_mail_bcc_receive_address_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="密送 :"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/write_mail_bcc_receive_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_toLeftOf="@+id/write_bcc_address_select"
                            android:layout_toRightOf="@id/write_mail_bcc_receive_address_text"
                            android:background="@null"
                            android:minEms="15"
                            android:singleLine="true" />

                        <ImageButton
                            android:id="@+id/write_bcc_address_select"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@null"
                            android:visibility="invisible"
                            android:src="@drawable/button_add_selector" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#CBCCD0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/write_mail_sender_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="发件人:"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/write_mail_send_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_toRightOf="@id/write_mail_sender_address"
                            android:background="@null"
                            android:layout_marginLeft="4dp"
                            android:minEms="15"
                            android:editable="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="1241304515@qq.com"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#CBCCD0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/write_mail_theme_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="主 题:"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/write_mail_theme"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@id/write_mail_theme_text"
                            android:background="@null"
                            android:minEms="15"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#CBCCD0" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <!--  <idv.qin.view.LinedEditText -->
                    <EditText
                        android:id="@+id/write_mail_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:background="@null"
                        android:gravity="start"
                        android:text=" content 测试"
                        android:minLines="10" />

                    <View 
                        android:id="@+id/write_mail_content_extra_halving_line"
                         android:layout_width="fill_parent"
                          android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                          android:layout_below="@id/write_mail_content"
                          android:background="@drawable/home_content_cell_division_horizontal"
                          />
                      <GridView
                          android:id="@+id/write_mail_extras_gridview"
                          android:layout_width="fill_parent"
                          android:layout_height="200dp"
                          android:layout_alignParentBottom="true"
                          android:layout_below="@id/write_mail_content_extra_halving_line"
                          android:gravity="center"
                          android:horizontalSpacing="10dp"
                          android:listSelector="@null"
                          android:numColumns="3"
                          android:paddingLeft="3dp"
                          android:paddingRight="3dp"
                          android:paddingTop="10dp"
                          android:focusableInTouchMode="false"
                          android:stretchMode="columnWidth"
                          android:verticalSpacing="15dp"
                         />
                          <!-- <RelativeLayout 
                          android:id="@+id/write_mail_extras_layout"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_alignParentBottom="true"
                          android:layout_below="@id/write_mail_content"
                          android:gravity="center" /> -->

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/write_mail_extra_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="250dp"
            android:background="@null"
            android:src="@drawable/write_mail_extras_button_selector" />
    </FrameLayout>

</LinearLayout>